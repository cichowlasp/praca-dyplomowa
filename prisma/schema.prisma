generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id                   String    @id @default(cuid())
  edited               Boolean   @default(false)
  authorId             String
  reviewed             Reviewed  @default(NOTREVIEWED)
  creationData         DateTime  @default(now())
  realizationDateEnd   DateTime?
  realizationDateStart DateTime?
  completedAt          DateTime?
  informations         Info[]
  messages             Message[]
  user                 User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  form                 Form?     @relation(fields: [formId], references: [id])
  formId               String?
}

model Message {
  id      String   @id @default(cuid())
  date    DateTime @default(now())
  name    String
  message String
  orderId String?
  from    From     @default(USER)
  Order   Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Info {
  id      String  @id @default(cuid())
  name    String
  fill    String
  index   Int     @default(0)
  orderId String?
  Order   Order?  @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Company {
  id             String @id @default(cuid())
  companyName    String
  nip            String @unique
  companyEmail   String @unique
  companyAddress String
  phoneNumber    String
  createUserPin  String
  secretPhrase   String
  users          User[]
}

model User {
  id          String   @id @default(cuid())
  name        String
  surname     String
  email       String   @unique
  pin         String?  @unique
  password    String?
  admin       Boolean  @default(false)
  company     String
  createdAt   DateTime @default(now())
  phoneNumber String
  companyId   String?
  orders      Order[]
  Company     Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model Form {
  id         String     @id @default(cuid())
  active     Boolean    @default(false)
  name       String
  checkboxes CheckBox[]
  inputs     Input[]
  Option     Option[]
  selects    Select[]
  Order      Order[]
}

model Input {
  id          String  @id @default(cuid())
  placeholder String?
  type        String
  required    Boolean
  maxLength   Int?
  minLength   Int?
  formId      String?
  label       String?
  order       Int     @default(0)
  Form        Form?   @relation(fields: [formId], references: [id], onDelete: Cascade)
}

model Select {
  id          String   @id @default(cuid())
  placeholder String?
  required    Boolean  @default(false)
  formId      String?
  label       String?
  order       Int      @default(0)
  options     Option[]
  Form        Form?    @relation(fields: [formId], references: [id], onDelete: Cascade)
}

model CheckBox {
  id       String  @id @default(cuid())
  order    Int     @default(0)
  label    String?
  required Boolean
  formId   String?
  value    Boolean @default(false)
  Form     Form?   @relation(fields: [formId], references: [id])
}

model Option {
  id       String    @id @default(cuid())
  value    String
  selectId String?
  formId   String?
  formType formType?
  form     Form?     @relation(fields: [formId], references: [id])
  Select   Select?   @relation(fields: [selectId], references: [id], onDelete: Cascade)
}

enum Reviewed {
  APPROVED
  DECLINE
  NOTREVIEWED
  COMPLETED
}

enum From {
  USER
  ADMIN
}

enum formType {
  NEXT
  POPUP
}
