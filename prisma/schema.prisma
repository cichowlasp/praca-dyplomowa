generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id          String  @id
  title       String
  description String
  respond     String?
  edited      Boolean @default(false)
  reviewed    Boolean @default(false)
  authorId    String?
  User        User?   @relation(fields: [authorId], references: [id])
}

model User {
  id                 String    @id
  name               String
  surname            String
  email              String    @unique
  pin                String?
  password           String?
  admin              Boolean   @default(false)
  accessToken        String?
  accessTokenExpires DateTime?
  refreshToken       String?
  Order              Order[]
}
